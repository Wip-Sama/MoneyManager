<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.wip.moneymanager.components.BalanceEditor?>

<fx:root fx:id="BoderPanePopup" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0" prefWidth="600.0" styleClass="background-pop-up" stylesheets="@../style-dark.css" type="BorderPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="650.0" prefWidth="500.0" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
            </padding>

                     <!-- Navigation Buttons -->
            <HBox alignment="CENTER" prefWidth="Infinity" spacing="10.0" stylesheets="@../css/transaction-popup.css">
                <Button fx:id="incomeButton" maxWidth="120" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" stylesheets="@../css/transaction-popup.css" text="In" HBox.hgrow="ALWAYS" />
                <Button fx:id="expenseButton" maxWidth="120" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Spese" HBox.hgrow="ALWAYS" />
                <Button fx:id="trasferButton" maxWidth="120" style="-fx-background-color: transparent; -fx-text-fill: white;" styleClass="nav-button" text="Trasferimenti" HBox.hgrow="ALWAYS" />
            </HBox>

                     <!-- Form Fields -->
            <VBox spacing="10.0">
                <Label style="-fx-text-fill: white;" text="Data " />
            <DatePicker maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="35.0" />

                         <Label style="-fx-text-fill: white;" text="Importo" />
            <BalanceEditor maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="35.0" />

                         <Label style="-fx-text-fill: white;" text="Categoria" />
            <ChoiceBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="35.0" />

                         <Label style="-fx-text-fill: white;" text="Conto" />
            <ChoiceBox layoutX="10.0" layoutY="190.0" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="35.0" />

                         <Label style="-fx-text-fill: white;" text="Tags" />
                <TextField fx:id="tagsField" style="-fx-background-color: #2E2E2E; -fx-text-fill: white;" />
            </VBox>

                     <!-- Action Buttons -->
            <VBox spacing="10.0">
                <Button fx:id="saveButton" maxWidth="Infinity" styleClass="full-button" text="Salva" />

                         <Button fx:id="cancelButton" maxWidth="Infinity" styleClass="transparent-button" stylesheets="@../css/button.css" text="Annulla" />
            <VBox.margin>
               <Insets top="20.0" />
            </VBox.margin>
            </VBox>
        </VBox>
    </center>
</fx:root>
