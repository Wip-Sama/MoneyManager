<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <TextField fx:id="search_bar" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <ScrollPane fx:id="scroll_pane" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="80.0" prefWidth="189.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="tag_pane" hgap="2.0" maxHeight="-Infinity" minHeight="-Infinity" vgap="2.0">
               <padding>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
               </padding>
            </FlowPane>
         </content>
      </ScrollPane>
   </center>
</fx:root>
