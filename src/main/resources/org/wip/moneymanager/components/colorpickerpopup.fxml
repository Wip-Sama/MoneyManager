<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="300.0" styleClass="colorpicker"  type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <Pane fx:id="color_preview" prefHeight="98.0" prefWidth="271.0" style="-fx-background-color: black;" styleClass="rounded_pane" BorderPane.alignment="CENTER" />
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox alignment="CENTER" prefHeight="213.0" prefWidth="271.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Slider fx:id="red_slider" blockIncrement="1.0" max="255.0" styleClass="slider_red" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="red_textfield" prefWidth="50.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Slider fx:id="green_slider" blockIncrement="1.0" max="255.0" styleClass="slider_green" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="green_textfield" prefWidth="50.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="5.0">
               <children>
                  <Slider fx:id="blue_slider" blockIncrement="1.0" max="255.0" styleClass="slider_blue" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="blue_textfield" prefWidth="50.0">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="discard_button" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#discard" prefHeight="40.0" prefWidth="80.0" style="-fx-text-fill: red;" styleClass="transparent-button" text="Discard" textAlignment="CENTER" />
                  <Button fx:id="save_button" contentDisplay="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="80.0" styleClass="full-button" text="Save" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</fx:root>
